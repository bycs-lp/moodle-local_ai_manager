{{!
    @template local_ai_manager/tenantenable

    Template for enabling/disabling the tenant.

    Example context (json):
    {
        "tenantfullname": "My own tenant",
        "checked": true,
        "rightsconfiglink": "https://mymoodle.com/linktotherightsconfigtable.php"
    }
}}
<div class="local_ai_manager-tenantenable mt-0 mb-5">
    <div class="text-center">
        <h2 class="p-2 mb-0 pb-0">{{#str}} tenantconfig_heading, local_ai_manager {{/str}}</h2>
        <h5>{{tenantfullname}}</h5>
        <p class="p-3">{{#str}} tenantenabledescription, local_ai_manager {{/str}}</p>
    </div>
    <div class="d-flex justify-content-center m-5">
        {{> local_ai_manager/toggle }}
    </div>
    {{#checked}}
        <div class="alert alert-info">
            {{#str}}tenantenablednextsteps, local_ai_manager, {{{rightsconfiglink}}} {{/str}}
        </div>
    {{/checked}}
</div>
