{{!
    @template local_ai_manager/admin_setting_tabs


    Example context (json):
    {
        "tabs": [
         {
            "name": "tab1",
            "active": 0,
            "displayname": "Inactive tab1",
            'description' => "Settings",
            "html": "<p>Tab 1 content</p>"
         },
         {
            "name": "tab2",
            "active": 1,
            "displayname": "Active tab2",
            'description' => "Very important settings.",
            "html": "<p>Tab 2 content</p>"
         }
        ]
    }
}}
<ul class="nav nav-tabs" role="tablist">
    {{#tabs}}
        <li class="nav-item">
            <a href="#{{name}}" class="nav-link {{#active}}active{{/active}}" data-toggle="tab" role="tab">{{displayname}}</a>
        </li>
    {{/tabs}}
</ul>
<div class="tab-content mt-3">
    {{#tabs}}
        <div class="tab-pane {{#active}}active{{/active}}" id="{{name}}" role="tabpanel">
            {{#description}}
                <div class="box generalbox">
                    <p>{{description}}</p>
                </div>
            {{/description }}
            {{{html}}}
        </div>
    {{/tabs}}
</div>
