{{!
    @template local_ai_manager/purposeusageinfomodal

    Template for the modal to show the purpose description and usages.

    Example context (json):
    {
        "purposedisplayname": "Chat",
        "purposedescription": "This purpose does some things and is being used for others",
        "components": [
            {
                "componentdisplayname": "Chatbot",
                "placedescriptions": [
                    {
                        "description": "The main chatbot window"
                    }
                ]
            }
        ]
    }
}}
{{< core/modal}}
    {{$title}}
        {{#str}} purposeusageinfoheading, local_ai_manager, {{purposedisplayname}} {{/str}}
    {{/title}}
    {{$body}}
        {{> local_ai_manager/purposeusageinfo }}
    {{/body}}
{{/core/modal}}
