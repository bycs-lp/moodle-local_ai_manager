{{!
    @template local_ai_manager/promptsmodal

    Template for the AI prompts view modal.

    Example context (json):
    {
        "heading": "Prompts",
        "lastday": 17293874,
        "lastweek": 1238978723,
        "lastmonth": 123879123
    }
}}
{{< core/modal }}
    {{$title}}
        {{heading}}
    {{/title}}

    {{$body}}
        <div class="w-25 mb-2">
            <select class="form-control" data-local_ai_manager-prompts_view="timeselector">
                <option value="{{lastday}}">{{#str}}lastday, local_ai_manager{{/str}}</option>
                <option value="{{lastweek}}">{{#str}}lastweek, local_ai_manager{{/str}}</option>
                <option value="{{lastmonth}}">{{#str}}lastmonth, local_ai_manager{{/str}}</option>
                <option value="0">{{#str}}alltime, local_ai_manager{{/str}}</option>
            </select>
        </div>
        {{> local_ai_manager/promptsmodal_table }}
    {{/body}}

    {{$footer}}
        <button type="button" class="btn btn-primary" data-action="cancel">{{#str}}closebuttontitle, core{{/str}}</button>
    {{/footer}}
{{/ core/modal}}

