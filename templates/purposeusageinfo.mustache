{{!
    @template local_ai_manager/purposeusageinfo

    Template for showing the purpose info.

    Example context (json):
    {
        "purposedisplayname": "Chat",
        "purposedescription": "This purpose does some things and is being used for others",
        "components": [
            {
                "componentdisplayname": "Chatbot",
                "placedescriptions": [
                    {
                        "description": "The main chatbot window"
                    }
                ]
            }
        ]
    }
}}
<h5>{{#str}}purposedescription, local_ai_manager, {{purposedisplayname}}{{/str}}</h5>
<div class="mt-3"><em>{{purposedescription}}</em></div>

<div class="d-flex flex-column mt-5">
{{#components}}
    <div class="d-flex flex-row border">
        <div class="col-md-3 p-2">{{componentdisplayname}}</div>
        <div class="col-md-9 p-2 d-flex flex-column border-left">
            {{#placedescriptions}}
                <div class="mb-2">{{description}}</div>
            {{/placedescriptions}}
        </div>
    </div>
{{/components}}
</div>
