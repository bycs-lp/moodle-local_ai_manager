{{!
    @template local_ai_manager/tenantnavbar

    Admin text setting template.

    Context variables required for this template:
    * label - form element name
        * href - element id
    * forceltr - always display as ltr

    Example context (json):
    {
    }
}}
<div class="input-group">
    <label class="mr-2 mb-0 {{#checked}}text-primary{{/checked}}" for="local_ai_manager_toggle_input-{{uniqid}}">
        {{description}}
    </label>
    <div id="local_ai_manager_toggle_clickable-{{uniqid}}" class="custom-control custom-switch" style="cursor: pointer;">
        <input type="checkbox"{{!
                }} name="local_ai_manager_toggle_input-{{uniqid}}"{{!
                }}{{#checked}}{{!
                    }} checked{{!
                }}{{/checked}}{{!
                }} class="custom-control-input"{{!
                }} id="local_ai_manager_toggle_input-{{uniqid}}"{{!
                }} data-targetwhenchecked="{{{targetwhenchecked}}}"{{!
                }} data-targetwhennotchecked="{{{targetwhennotchecked}}}"{{!
                }} style="margin-left: 0"{{!
            }}>
        <span class="custom-control-label">{{text}}</span>
    </div>
</div>
{{#js}}
    require(['local_ai_manager/toggle_handler'], function(ToggleHandler) {
        ToggleHandler.init('local_ai_manager_toggle_input-{{uniqid}}', 'local_ai_manager_toggle_clickable-{{uniqid}}');
    });
{{/js}}
